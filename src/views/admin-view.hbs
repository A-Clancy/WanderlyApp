{{> menu active="admin"}}

<section class="section">
  <h1 class="title is-3 has-text-danger">Admin Dashboard</h1>
  <div class="content">
    <ul>
      <li><strong>Total Users:</strong> {{userCount}}</li>
      <li><strong>Total Categories:</strong> {{categoryCount}}</li>
      <li><strong>Total POIs:</strong> {{poiCount}}</li>
    </ul>
  </div>
</section>

<section class="section">
  <h2 class="subtitle">Registered Users ({{userCount}})</h2>
  <table class="table is-fullwidth is-striped">
    <thead>
      <tr>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
      <tr>
        <td>{{email}}</td>
        <td>
          <a href="/admin/deleteuser/{{_id}}" class="button is-small is-danger">Delete</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</section>