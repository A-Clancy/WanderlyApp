<p class="has-text-grey">Found {{pois.length}} POIs</p>
{{#if pois.length}}
  <table class="table is-fullwidth">
    <thead>
      <tr>
        <th>POI</th>
        <th>Description</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each pois}}
      <tr>
        <td>{{name}}</td>
        <td>{{description}}</td>
        <td>{{latitude}}</td>
        <td>{{longitude}}</td>
        <td>
          <a href="/category/{{../category._id}}/deletepoi/{{_id}}" class="ui icon button">
            <i class="fas fa-trash"></i>
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="notification is-light has-text-grey">
    No POIs have been added to this category yet.
  </div>
{{/if}}
